<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="@drawable/frame2">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:clipToPadding="false">

        <android.support.v7.widget.CardView
            android:id="@+id/cdAsianGame"
            android:layout_width="160dp"
            android:layout_height="190dp"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@drawable/asiangame"
                    android:padding="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Asian Game"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:textColor="#484848"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#dadada"
                    android:layout_margin="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 Siswa IDN menjadi salah satu panitia di Asian Game"
                    android:gravity="center"
                    android:textColor="#8f8e8e"
                    android:padding="5dp"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cdMikriTik"
            android:layout_width="160dp"
            android:layout_height="190dp"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@drawable/mikrotik"
                    android:padding="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Olimpiade Mikrotik"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:textColor="#484848"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#dadada"
                    android:layout_margin="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alhamdulillah siswa SMK IDN Bogor lolos masuk final dalam Olimpiade Mikrotik penyisihan wilayah Jabodetabek dan Banten."
                    android:gravity="center"
                    android:textColor="#8f8e8e"
                    android:padding="5dp"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:clipToPadding="false">

        <android.support.v7.widget.CardView
            android:id="@+id/cdKoran"
            android:layout_width="160dp"
            android:layout_height="190dp"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@drawable/koran"
                    android:padding="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Siswa IDN\nmasuk koran?"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:textColor="#484848"
                    android:gravity="center"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#dadada"
                    android:layout_margin="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SMK IDN masuk pemberitaan pada media Radar Bogor edisi 24 September 2018."
                    android:gravity="center"
                    android:textColor="#8f8e8e"
                    android:padding="5dp"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cdKesehatan"
            android:layout_width="160dp"
            android:layout_height="190dp"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@drawable/ic_healing_black_24dp"
                    android:padding="10dp"
                    android:background="@drawable/lingkaranbackgroundbirutua"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seminar Cara\nHidup sehat"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:textColor="#484848"
                    android:gravity="center"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#dadada"
                    android:layout_margin="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kegiatan Seminar “Cara Hidup Sehat” yang disampaikan oleh dr. Dwisnu Hendriady untuk Siswa SMP-SMK IDN Boarding School Bogor."
                    android:gravity="center"
                    android:textColor="#8f8e8e"
                    android:padding="5dp"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:clipToPadding="false">

        <android.support.v7.widget.CardView
            android:layout_width="340dp"
            android:layout_height="180dp"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/instagram"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:src="@drawable/instagram"
                        android:padding="10dp" />

                    <ImageView
                        android:id="@+id/facebook"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:src="@drawable/facebook"
                        android:padding="10dp" />

                    <ImageView
                        android:id="@+id/youtube"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:src="@drawable/youtube"
                        android:padding="10dp" />

                    <ImageView
                        android:id="@+id/gmail"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:src="@drawable/gmail"
                        android:padding="10dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contac Us On"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:textColor="#484848"
                    android:gravity="center"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#dadada"
                    android:layout_margin="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sekolah IDN Boarding School"
                    android:gravity="center"
                    android:textColor="#8f8e8e"
                    android:padding="5dp"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>
    
</LinearLayout>